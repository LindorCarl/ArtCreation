

{% extends 'base.html.twig' %}

{% block title %}Hello PortfolioController!{% endblock %}

{% block body %}
        <!-- WELCOME -->
        {% set img = categorie.peintures|last %}
        <section data-jarallax data-speed=".8" class="pt-12 pt-md-14 pb-12 pb-md-15 overlay overlay-black overlay-60 bg-cover jarallax" style="margin-top: -87px; background-image: none; z-index: 0;" data-jarallax-original-styles="margin-top: -87px; background-image: url(http://antoinebernabeu.fr/media/cache/welcome/uploads/peintures/img-7599-64ca2040b2c7a643623396.jpeg);">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-md-10 col-lg-7 text-center">
            <h1 class="display-2 fw-bold text-white">
              {{ categorie.nom }}
            </h1>
            <p class="lead text-white-75 mb-4">
              {{ categorie.description }}
            </p>
          </div>
        </div>
      </div>
    <div id="jarallax-container-0" style="position: absolute; top: 0px; left: 0px; width: 100%; height: 100%; overflow: hidden; z-index: -100;"><div style="background-position: 50% 50%; background-size: cover; background-repeat: no-repeat; background-image: url(&quot;https://antoinebernabeu.fr/media/cache/welcome/uploads/peintures/img-7599-64ca2040b2c7a643623396.jpeg&quot;); position: absolute; top: 0px; left: 0px; width: 1029px; height: 602.825px; overflow: hidden; pointer-events: none; transform-style: preserve-3d; backface-visibility: hidden; will-change: transform, opacity; margin-top: 32.0875px; transform: translate3d(0px, -32.325px, 0px);"></div></div></section>

    <!-- SHAPE -->
    <div class="position-relative">
      <div class="shape shape-bottom shape-fluid-x svg-shim text-light">
        <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 48h2880V0h-720C1442.5 52 720 0 720 0H0v48z" fill="currentColor"></path></svg>      </div>
    </div>

        <!-- CONTENT -->
    <section class="py-8 py-md-11 mt-n10 mt-md-n14">
      <div class="container">
        <div class="row" id="portfolio" data-isotope="{layoutMode: masonry}" style="position: relative; height: 3517.89px;">
            {% for peinture in peintures %}
            <div class="col-12 col-md-4" style="position: absolute; left: 0px; top: 0px;">
              <a class="" href="#!" data-bigpicture="{"imgSrc": "{{ peinture.file }}"}">
                <div class="card-zoom">
                  <img class="card-img" src="{{ peinture.file }}" alt="...">
                </div>
              </a>
            </div>
            {% endfor %}

        </div>
      </div>
    </section>

            <!-- SHAPE -->
    <div class="position-relative">
        <div class="shape shape-bottom shape-fluid-x svg-shim text-dark">
            <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 48h2880V0h-720C1442.5 52 720 0 720 0H0v48z" fill="currentColor"></path></svg>
        </div>
    </div>
{% endblock %}