{% extends 'security/base.html.twig' %}
{% block title %}Log in!{% endblock %}

{% block body %}
<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4 mt-5">
                    <p class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4"></P>
                    <span class="h1 fw-bold mb-0"></span>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5 ">

                    <form style="width: 23rem;" method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;"> Ouvrir une session </h3>

                        <div class="form-outline mb-4">
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>

                        <div class="form-outline mb-4">
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>

                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >

                        <div class="pt-1 mb-4">
                        <button class="btn btn-info btn-lg btn-block" type="submit">Se connecter</button>
                        </div>

                        <p>Don't have an account? <a href="#!" class="link-info">Register here</a></p>
                    </form>
                </div>

                </div>
                    <div class="col-sm-6 px-0 d-none d-sm-block" data-aos="fade-left">
                        <img src="https://img.freepik.com/photos-premium/image-du-visage-femme-oiseau-tete-ai-generative_97167-8064.jpg"
                        alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}







